<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Node Starter</title>

    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <script src="js/jquery.min.js"></script>

    <link href="css/signin.css" rel="stylesheet">

</head>

<body class="text-center">

    <form id="signin-form" class="form-signin" method="POST" action="/signinuser">
        <img class="mb-4" src="assets/npm.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Log In</h1>
        <label for="inputEmail" class="sr-only">Username or Email</label>
        <input name="username" type="text" id="inputUser" class="form-control" placeholder="Username or Email" required
            autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input name="password" type="password" id="inputPassword" class="form-control" placeholder="Password" required>

        <input type="submit" value="Sign In" class="btn btn-lg btn-primary btn-block">

        <br />

        <p>Don't have an account? Register <a href="/signup">here</a></p>

        <br />

        <div id="loginFailureAlert" class="alert alert-warning d-none" role="alert">
            Invalid Credentials!
        </div>

    </form>

</body>

</html>